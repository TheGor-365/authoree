<div id="<%= dom_id user %>" class="border rounded my-5 p-5">
  <div class="row">
    <div class="col-4">
      <p class="text-muted display-6">
        Name
      </p>
      <p class="text-muted display-6">
        Book author
      </p>
    </div>

    <div class="col">
      <p class="text-success mb-4">
        <%= user.name %>
      </p>
      <p class="text-success mb-4">
        <%= user.book.author %>
      </p>
      <small>
        <span class="text-muted">Created</span> <%= time_ago_in_words user.created_at %> ago
      </small>
    </div>
  </div>
</div>
